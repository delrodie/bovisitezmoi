{% extends 'backend.html.twig' %}
{% block title %}{{ parent() }} Gestion des partenaires{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-12 text-white p-t-40 p-b-90">
                        <h4 class="">  Gestion des partenaires</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-7">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Liste des partenaires</h5>
                        </div>
                        <div class="card-body ">
                            <div class="table-responsive p-t-10">
                                <table id="example" class="table   " style="width:100%">
                                    <thead>
                                    <tr>
                                        <td class="text-center">ID</td>
                                        <td class="text-center">Nom</td>
                                        <td class="text-center">Contact</td>
                                        <td class="text-center">Biens</td>
                                        <td class="text-center">Actions</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for partenaire in partenaires %}
                                        <tr>
                                            <td>{{ loop.index }}
                                            <td>{{ partenaire.nom }}</td>
                                            <td>{{ partenaire.contact }}</td>
                                            <td class="text-center">
                                                {% if partenaire.nombreBien is null %}
                                                    -
                                                {% else %}
                                                    {{ partenaire.nombreBien }}
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="#"><i class="fa fa-eye"></i></a> |
                                                <a href="{{ path('backend_partenaire_edit', {'slug': partenaire.slug}) }}" title="Modifier la partenaire"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--widget card ends-->


                </div>
                <div class="col-lg-5">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Enregistrement</h5>
                        </div>
                        <div class="card-body ">
                            {{ form_start(form)}}
                            <div class="form-row">
                                <div class="col-12 form-group">
                                    {{ form_widget(form.nom)}}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="col-12 form-group">
                                    {{ form_widget(form.adresse)}}
                                    {{ form_errors(form.adresse) }}
                                </div>
                                <div class="col-12 form-group">
                                    {{ form_widget(form.email)}}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="col-12 form-group">
                                    {{ form_widget(form.contact)}}
                                    {{ form_errors(form.contact) }}
                                </div>
                                <div class="col-12 form-group">
                                    {{ form_widget(form.imageFile)}}
                                    {{ form_errors(form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-primary">Enregistrer</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
{% endblock %}
