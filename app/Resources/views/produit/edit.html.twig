{% extends 'backend.html.twig' %}
{% block title %}{{ parent() }} Gestion des produits{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-12 text-white p-t-40 p-b-90">
                        <h4 class="">  Gestion des produits</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-10">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Modification</h5>
                        </div>
                        <div class="card-body ">
                            {{ form_start(edit_form)}}
                            <div class="form-row">
                                <div class="col-6 form-group">
                                    <label for="">Le bien</label>
                                    {{ form_widget(edit_form.bien)}}
                                    {{ form_errors(edit_form.bien) }}
                                </div>
                                <div class="col-6 form-group">
                                    <label for="">La famille</label>
                                    {{ form_widget(edit_form.famille)}}
                                    {{ form_errors(edit_form.famille) }}
                                </div>
                                <div class="col-6 form-group">
                                    <label for="">la marque</label>
                                    {{ form_widget(edit_form.marque)}}
                                    {{ form_errors(edit_form.marque) }}
                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Description</label>
                                    {{ form_widget(edit_form.description)}}
                                    {{ form_errors(edit_form.description) }}
                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Mots clés</label>
                                    {{ form_widget(edit_form.tags)}}
                                    {{ form_errors(edit_form.tags) }}
                                </div>
                                <div class="col-6 form-group">
                                    <label for="">Prix</label>
                                    {{ form_widget(edit_form.prix)}}
                                    {{ form_errors(edit_form.prix) }}
                                </div>
                                <div class="col-6 form-group">
                                    <label for="">Mode</label>
                                    {{ form_widget(edit_form.mode)}}
                                    {{ form_errors(edit_form.mode) }}
                                </div>
                                <div class="col-12 form-group">
                                    {{ form_widget(edit_form.imageFile)}}
                                    {{ form_errors(edit_form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <a href="{{ path('backend_produit_index') }}" class="btn btn-default">Annuler</a>
                                <button class="btn btn-primary">Modifier</button>
                            </div>
                            {{ form_end(edit_form) }}
                            <div class="form-group text-left">
                                {{ form_start(delete_form, {'attr': {'onsubmit': 'return confirm("Êtes-vous sur de vouloir supprimer ce produit ?");'}}) }}
                                <button class="btn btn-danger"><i class="fa fa-trash"></i> Suprimer</button>
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('ressources/vendor/tagsinput/js/bootstrap-tagsinput.css') }}">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
    <script src="{{ asset('ressources/vendor/tagsinput/js/bootstrap-tagsinput.min.js') }}"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>
    <script>
        $(document).ready(function () {
            $("tag-input").tagsinput();
            $('#appbundle_produit_description').summernote();
        })
    </script>
{% endblock %}
