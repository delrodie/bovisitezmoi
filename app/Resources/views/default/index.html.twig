{% endblock %}
{% block slider %}
<style type="text/css">
	{% for slider in sliders %}
	.flexslider.top_slider .slide{{loop.index}} {
		width:100%;
		background-color:#085e11;
		background-image:url({{ asset(vich_uploader_asset(slider, 'imageFile') ) }});
		background-size:cover;
	}
	{% endfor %}
</style>
{% endblock %}
