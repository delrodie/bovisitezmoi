{% extends 'base.html.twig' %}

{% block body %}
    <h1>Slider</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slider.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ slider.titre }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{{ slider.dateDebut }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ slider.dateFin }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if slider.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ slider.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ slider.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ slider.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ slider.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ slider.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backend_slider_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backend_slider_edit', { 'id': slider.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
