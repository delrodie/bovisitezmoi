{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ categorie.libelle }}</td>
            </tr>
            <tr>
                <th>Nombrebien</th>
                <td>{{ categorie.nombreBien }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ categorie.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ categorie.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ categorie.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ categorie.modifieLe }}</td>
